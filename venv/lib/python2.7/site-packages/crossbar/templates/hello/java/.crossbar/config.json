
{
   "controller": {
   },
   "workers": [
      {
         "type": "router",
         "realms": [
            {
               "name": "realm1",
               "roles": [
                  {
                     "name": "anonymous",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "web",
               "endpoint": {
                  "type": "tcp",
                  "port": 8080
               },
               "paths": {
                  "/": {
                     "type": "static",
                     "directory": "../web"
                  },
                  "ws": {
                     "type": "websocket"
                  }
               }
            }
         ]
      },
      {
         "type": "guest",
         "executable": "java",
         "arguments": [
            "-classpath", "./target/classes:./target/dependency/*",
            "ws.wamp.jawampa.CrossbarExample",
            "ws://127.0.0.1:8080/ws", "realm1"
         ],
         "options": {
            "workdir": ".."
         }
      }
   ]
}
